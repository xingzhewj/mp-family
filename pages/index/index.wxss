/**index.wxss**/
page {
  background-color: #f6f6f6;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 100px;
  width: 100%;
}

.user-motto {
  display: block;
  text-align: center;
}

.link-container {
  display: flex;
  justify-content: space-between;
}

.link-item {
  height: 50px;
  line-height: 50px;
  display: inline-block;
  width: 48%;
  text-align: center;
  background-color: #fff;
  margin: 10px;
}

/** 修改默认的navigator点击态 **/
.navigator-hover {
    color:blue;
}
/** 自定义其他点击态样式类 **/
.other-navigator-hover {
    color:red;
}